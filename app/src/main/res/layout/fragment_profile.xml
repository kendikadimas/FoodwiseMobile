<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:layout_marginBottom="20dp">

        <!-- Profile Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Profile Picture -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/iv_profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- Username -->
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tsanyss"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1E1E1E"
                    android:layout_marginTop="16dp"/>

                <!-- Member Since -->
                <TextView
                    android:id="@+id/tv_member_since"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member sejak Oktober 2025"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp"/>

                <!-- Edit Profile Button -->
                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Edit Profil"
                    android:textSize="14sp"
                    android:backgroundTint="#1E1E1E"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="24dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Weight -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_current_weight_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="64.8 kg"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E1E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berat Badan"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Height -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_height_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="170 cm"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E1E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tinggi Badan"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- BMI -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_bmi_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E1E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Streak Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Fire Icon -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ”¥"
                    android:textSize="32sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tv_streak_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 Hari Berturut-turut"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E65100"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lanjutkan konsistensimu!"
                        android:textSize="12sp"
                        android:textColor="#FF6F00"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROGRESS TARGET BERAT BADAN"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:letterSpacing="0.05"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_start_weight_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Awal: 70 kg"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_target_weight_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target: 60 kg"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar_weight"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="12dp"
                    android:progressDrawable="@drawable/progress_bar_rounded"
                    android:progress="50"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Menu Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Keluar Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_logout"
                        app:tint="#F44336"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Keluar"
                        android:textSize="16sp"
                        android:textColor="#1E1E1E"
                        android:layout_marginStart="16dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#CCCCCC"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>