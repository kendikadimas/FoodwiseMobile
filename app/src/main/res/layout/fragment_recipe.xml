<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    android:fillViewport="true"
    tools:context=".ui.RecipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="160dp">

        <!-- Tombol Toggle untuk Buat Resep / Resep Tersimpan -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_button_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:checkedButton="@id/btn_buat_resep"
            app:singleSelection="true"
            app:selectionRequired="true">
<!--            app:cornerRaius="24dp"-->


            <Button
                android:id="@+id/btn_buat_resep"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buat Resep Baru"
                app:backgroundTint="@drawable/toggle_button_background_selector"
                android:textColor="@drawable/toggle_button_text_selector"/>

            <Button
                android:id="@+id/btn_resep_tersimpan"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resep Tersimpan"
                app:backgroundTint="@drawable/toggle_button_background_selector"
                android:textColor="@drawable/toggle_button_text_selector"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- KONTEN UNTUK MEMBUAT RESEP BARU -->
        <LinearLayout
            android:id="@+id/create_recipe_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Card Nama Resep & Porsi -->
            <androidx.cardview.widget.CardView
                style="@style/RecipeCard">
                <LinearLayout style="@style/RecipeCardContent">
                    <TextView style="@style/RecipeCardLabel" android:text="Nama Resep" />
                    <EditText
                        android:id="@+id/et_recipe_name"
                        style="@style/RecipeEditText"
                        android:hint="Contoh: Opor Ayam Solo" />
                    <TextView style="@style/RecipeCardLabel" android:layout_marginTop="16dp" android:text="Jumlah Porsi" />
                    <EditText
                        android:id="@+id/et_servings"
                        style="@style/RecipeEditText"
                        android:inputType="number"
                        android:layout_width="80dp"
                        android:text="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Tambah Bahan -->
            <androidx.cardview.widget.CardView style="@style/RecipeCard">
                <LinearLayout style="@style/RecipeCardContent">
                    <TextView style="@style/RecipeCardTitle" android:text="Tambah Bahan" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_search_ingredient"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Cari bahan (ayam, santan...)"
                            style="@style/RecipeEditText" />
                        <Button
                            android:id="@+id/btn_search_ingredient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Cari"
                            android:backgroundTint="@color/green_primary"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_search_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_ingredient_search" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Jumlah Berat Bahan -->
            <androidx.cardview.widget.CardView style="@style/RecipeCard">
                <LinearLayout style="@style/RecipeCardContent">
                    <TextView style="@style/RecipeCardTitle" android:text="Jumlah berat bahan" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_added_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_added_ingredient" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Total Nutrisi -->
            <androidx.cardview.widget.CardView style="@style/RecipeCard">
                <LinearLayout style="@style/RecipeCardContent">
                    <TextView style="@style/RecipeCardTitle" android:text="Total Nutrisi" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="8dp">
                        <LinearLayout style="@style/NutritionSummaryItem">
                            <TextView style="@style/NutritionSummaryLabel" android:text="Total Resep" />
                            <TextView android:id="@+id/tv_total_recipe_calories" style="@style/NutritionSummaryValue" tools:text="560 kkal" />
                        </LinearLayout>
                        <LinearLayout style="@style/NutritionSummaryItem">
                            <TextView style="@style/NutritionSummaryLabel" android:text="Per Porsi" />
                            <TextView android:id="@+id/tv_calories_per_serving" style="@style/NutritionSummaryValue.Green" tools:text="560 kkal" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_save_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan Resep"
                android:padding="14dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/text_primary"
                android:textColor="@color/white"
                app:cornerRadius="24dp"/>
        </LinearLayout>

        <!-- KONTEN UNTUK MELIHAT RESEP TERSIMPAN -->
        <LinearLayout
            android:id="@+id/saved_recipes_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_saved_recipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_empty_saved_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum ada resep yang disimpan."
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

