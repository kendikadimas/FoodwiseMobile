    <resources xmlns:tools="http://schemas.android.com/tools">
        <style name="Base.Theme.Foodwise" parent="Theme.Material3.DayNight.NoActionBar">
        </style>


        <style name="Theme.Foodwise" parent="Base.Theme.Foodwise" />

        <style name="Base.CardView" parent="Widget.MaterialComponents.CardView">
            <item name="cardCornerRadius">20dp</item>
            <item name="cardElevation">0dp</item>
            <item name="cardBackgroundColor">#F5F5F5</item>
        </style>
        <style name="MealCard" parent="Base.CardView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">16dp</item>
        </style>

        <style name="MealCardContent">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:padding">20dp</item>
        </style>

        <style name="MealCardTitle" parent="Widget.AppCompat.TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
        </style>
        <style name="AddMealButton" parent="Widget.AppCompat.ImageButton">
            <item name="android:layout_width">48dp</item>
            <item name="android:layout_height">48dp</item>
            <item name="android:src">@drawable/ic_add</item>
            <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
            <item name="android:layout_alignParentEnd">true</item>
        </style>
        <style name="MealRecyclerView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">8dp</item>
        </style>



        <style name="NavItem">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:padding">10dp</item>
            <item name="android:tint">@android:color/white</item>
            <item name="android:alpha">0.7</item> </style>

        <style name="BottomNavItem" parent="Widget.AppCompat.TextView">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:textSize">12sp</item>
            <item name="android:drawablePadding">4dp</item>
            <item name="android:alpha">0.7</item> <item name="drawableTint">@android:color/white</item>
        </style>

        <style name="BottomNavItemContainer">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_weight">1</item>
            <item name="android:gravity">center</item>
            <item name="android:orientation">vertical</item>
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
        </style>

        <style name="BottomNavItemIcon">
            <item name="android:layout_width">24dp</item>
            <item name="android:layout_height">24dp</item>
            <item name="android:tint">@android:color/white</item>
        </style>

        <style name="BottomNavItemText">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">12sp</item>
            <item name="android:visibility">gone</item> <item name="android:layout_marginTop">2dp</item>
        </style>

        <style name="RecipeCard" parent="Widget.MaterialComponents.CardView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">16dp</item>
            <item name="cardCornerRadius">16dp</item>
            <item name="cardElevation">2dp</item>
            <item name="cardBackgroundColor">@color/card_background</item>
        </style>

        <!-- Style untuk kontainer konten di dalam CardView -->
        <style name="RecipeCardContent">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
            <item name="android:padding">16dp</item>
        </style>

        <!-- Style untuk label seperti "Nama Resep" -->
        <style name="RecipeCardLabel">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">8dp</item>
            <item name="android:textColor">@color/text_secondary</item>
            <item name="android:textSize">14sp</item>
        </style>

        <!-- Style untuk judul di dalam Card seperti "Tambah Bahan" -->
        <style name="RecipeCardTitle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">12dp</item>
            <item name="android:textColor">@color/text_primary</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- Style untuk semua EditText di halaman Recipe -->
        <style name="RecipeEditText">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/edittext_background</item>
            <item name="android:padding">12dp</item>
            <item name="android:textColor">@color/text_primary</item>
            <item name="android:textColorHint">@color/text_disabled</item>
            <item name="android:textSize">16sp</item>
        </style>

        <!-- Style untuk item di ringkasan nutrisi (Total & Per Porsi) -->
        <style name="NutritionSummaryItem">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:gravity">center</item>
            <item name="android:orientation">vertical</item>
        </style>

        <!-- Style untuk label di ringkasan nutrisi -->
        <style name="NutritionSummaryLabel">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">4dp</item>
            <item name="android:textColor">@color/text_secondary</item>
            <item name="android:textSize">14sp</item>
        </style>

        <!-- Style untuk nilai kalori di ringkasan nutrisi -->
        <style name="NutritionSummaryValue">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/text_primary</item>
            <item name="android:textSize">22sp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- Style turunan untuk nilai kalori yang berwarna hijau -->
        <style name="NutritionSummaryValue.Green">
            <item name="android:textColor">@color/green_accent</item>
        </style>

        <style name="MacroItem" >
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
            <item name="android:gravity">center_horizontal</item>
            <item name="android:paddingHorizontal">4dp</item>
        </style>

        <style name="MacroLabel" parent="Widget.AppCompat.TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">12sp</item>
            <item name="android:textStyle">bold</item>
        </style>
        <style name="MacroProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">8dp</item>
            <item name="android:layout_marginTop">4dp</item>
            <item name="android:progressDrawable">@drawable/progress_bar_green</item>
        </style>
        <style name="MacroValue" parent="Widget.AppCompat.TextView">
            <item name="android:textSize">10sp</item>
            <item name="android:textColor">#999</item>
        </style>
    </resources>